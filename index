<div class="countdown">
  <div class="unit-wrapper">
    <div class="unit" id="hours">--</div>
    <div class="label">Hours</div>
  </div>
  <div class="unit-wrapper">
    <div class="unit" id="minutes">--</div>
    <div class="label">Minutes</div>
  </div>
  <div class="unit-wrapper">
    <div class="unit" id="seconds">--</div>
    <div class="label">Seconds</div>
  </div>
</div>

<script>
  function getCSTTargetDate() {
    // Get current time in UTC
    const now = new Date();

    // Create a date object for 12:00 PM CST/CDT today
    const target = new Date(now.toLocaleString("en-US", { timeZone: "America/Chicago" }));
    target.setHours(12, 0, 0, 0); // 12:00 PM in CST/CDT

    // If it's past 12 PM CST/CDT, target tomorrow
    if (now >= new Date(target.getTime() + (now.getTimezoneOffset() * 60000))) {
      target.setDate(target.getDate() + 1);
    }

    return target;
  }

  function updateCountdown() {
    const now = new Date();
    const target = getCSTTargetDate();

    const targetUTC = new Date(target.toLocaleString("en-US", { timeZone: "UTC" }));
    const nowUTC = new Date(now.toISOString());

    const diff = targetUTC - nowUTC;

    const hours = Math.floor(diff / (1000 * 60 * 60));
    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((diff % (1000 * 60)) / 1000);

    document.getElementById('hours').textContent = String(hours).padStart(2, '0');
    document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
    document.getElementById('seconds').textContent = String(seconds).padStart(2, '0');
  }

  setInterval(updateCountdown, 1000);
  updateCountdown();
</script>

</body>
